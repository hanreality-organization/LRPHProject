<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/dp_15">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/reply_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/empty_photo"
        android:layout_centerVertical="true"
        app:riv_corner_radius="24dp" />

    <TextView
        android:id="@+id/reply_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/reply_avatar"
        android:textColor="#576B95"
        android:textSize="@dimen/sp_16"
        tools:text="小仙女" />

    <TextView
        android:id="@+id/reply_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reply_name"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_toEndOf="@id/reply_avatar"
        tools:text="我爱你"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/reply_addlikes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reply_name"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_toEndOf="@+id/reply_avatar"
        tools:text="dianzan"
        android:visibility="gone" />

    <TextView
        android:id="@+id/reply_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reply_content"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/reply_avatar"
        tools:text="5月25日 11：30"
        android:textColor="@color/gary"
        android:textSize="@dimen/sp_10" />

    <ImageView
        android:id="@+id/commentted_picture"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@color/ll_background" />

</RelativeLayout>